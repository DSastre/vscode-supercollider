{
	"fileTypes": [
		"sc",
		"scd"
	  ],
  "foldingStartMarker": "\\{|\/\\*|\\(",
  "foldingStopMarker": "\\}|\\*\/|\\)",
  "keyEquivalent": "^~S",
  "name": "SuperCollider",

  "patterns": [
    {
      "match": "\\b(this|thisThread|thisMethod|thisFunction|thisProcess|true|false|inf|nil|if|switch|case)\\b",
      "name": "keyword.control.supercollider"
    },
    {
      "match": "\\b(var|classvar)\\b",
      "name": "keyword.var.supercollider"
    },
    {
      "match": "\\b(arg)\\b",
      "name": "keyword.arg.supercollider"
    },
    {
      "include": "#string"
    },
    {
      "include": "#symbol"
    },
    {
      "match": "\\|[a-zA-Z0-9\\#\\[\\]\\\"\\_\\=\\.\\(\\)[[:space:]]\\,]+|",
      "name": "arg.function.supercollider"
    },
    {
      "match": "[a-z][a-zA-Z0-9_]*\\:",
      "name": "entity.name.tag.supercollider"
    },
    {
      "match": "\\\\[a-zA-Z0-9\\_]+",
      "name": "entity.name.symbol.supercollider"
    },
    {
      "captures": {
        "1": {
          "name": "entity.name.function.supercollider"
        }
      },
      "match": "^\\s*(\\**[a-z]{1}[a-zA-Z0-9_]+)\\s*\\{"
    },
    {
      "match": "\\~[a-zA-Z0-9]+",
      "name": "glvariable.language.supercollider"
    },
    {
		  "match": "\\/\\/.*",
		  "name": "comment.single.supercollider"
		},
		{
		  "begin": "\\/\\*",
		  "captures": {
			  "0": {
			    "name": "punctuation.definition.comment.supercollider"
			  }
		  },
		  "end": "\\*\\/",
		  "name": "comment.multiline.supercollider"
    },
    {
		  "comment": "Numbers",
		  "match": "\\b(0[xX][0-9A-Fa-f](?>_?[0-9A-Fa-f])*|\\d(?>_?\\d)*(\\.(?![^[:space:][:digit:]])(?>_?\\d)*)?([eE][-+]?\\d(?>_?\\d)*)?|0[bB][01]+)\\b",
		  "name": "constant.numeric.supercollider"
    },
    {
		  "match": "[a-z][a-zA-Z0-9_]*\\:",
		  "name": "support.name.tag.supercollider"
		},
    {
		  "captures": {
				"1": {
			  		"name": "entity.name.class.supercollider"
				}
			},
		  	"match": "^\\s*\\+*\\s*([A-Z]{1}[a-zA-Z0-9_]*)\\s*\\:{1}\\s*([A-Z]{1}[a-zA-Z0-9_]*)\\s*\\{"
		},
		{
		  "captures": {
			"1": {
			  "name": "entity.name.class.supercollider"
			}
		  },	  
		  "match": "^([A-Z]{1}[a-zA-Z0-9_]*)[^a-zA-Z0-9_]"
		},
		{
		  "match": "\\|[a-zA-Z0-9\\#\\[\\]\\\"\\_\\=\\.\\(\\)[[:space:]]\\,]+\\|",
		  "name": "variable.parameter.function.supercollider"
		},
		{
		  "captures": {
			"1": {
			  "name": "entity.name.class.supercollider"
			}
		  },
		  "match": "[^a-zA-Z0-9\\\\]([A-Z_]{1}[a-zA-Z0-9_]*)[^a-zA-Z0-9_]"
		}
  ],
  "repository": {
    "string": {
      "begin": "\"",
      "end": "\"",
      "name": "string.double.supercollider",
      "patterns": [{
        "match": "\\\\.",
        "name": "constant.character.escape.supercollider"
      }]
    },
    "symbol": {
      "begin": "'",
      "end": "'",
      "name": "entity.name.symbol.supercollider",
      "patterns": [{
        "match": "\\\\.",
        "name": "constant.character.escape.supercollider"
      }]
    }
  },
  "scopeName": "source.supercollider"
}